# Restro root .htaccess â€” allow front to be served at root
Options +FollowSymLinks
RewriteEngine On
RewriteBase /

# If root is requested, serve the Restro folder index
RewriteRule ^$ /Restro/ [L]

# Redirect everything to /Restro/<path>
RewriteCond %{REQUEST_URI} !^/Restro/
RewriteRule ^(.*)$ /Restro/$1 [L]
